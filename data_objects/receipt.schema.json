{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "https://raw.githubusercontent.com/versa-protocol/schema/data_objects/receipt.schema.json",
  "title": "Receipt",
  "description": "A Versa itemized receipt",
  "type": "object",
  "required": ["version", "header", "itemization", "actions", "payment"],
  "properties": {
    "version": {
      "type": "string",
      "minLength": 5,
      "maxLength": 14,
      "pattern": "^(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)$"
    },
    "header": {
      "type": "object",
      "required": [
        "receipt_id",
        "currency",
        "amount",
        "created_at",
        "mcc",
        "third_party",
        "customer",
        "location"
      ],
      "properties": {
        "receipt_id": { "type": "string" },
        "currency": {
          "description": "ISO 4217 currency code",
          "type": "string",
          "enum": ["usd", "eur", "jpy", "gbp", "aud", "cad", "chf", "cnh"]
        },
        "amount": { "type": "integer" },
        "subtotal": { "type": "integer" },
        "created_at": { "type": "integer" },
        "mcc": { "type": ["string", "null"] },
        "third_party": {
          "type": ["object", "null"],
          "required": ["first_party_relation", "make_primary", "merchant"],
          "properties": {
            "first_party_relation": {
              "type": "string",
              "enum": [
                "bnpl",
                "delivery_service",
                "marketplace",
                "payment_processor",
                "platform",
                "point_of_sale"
              ]
            },
            "make_primary": {
              "description": "Determines whether the merchant or third party gets top billing on the receipt",
              "type": "boolean"
            },
            "merchant": { "$ref": "#/$defs/merchant" }
          }
        },
        "customer": {
          "type": ["object", "null"],
          "required": ["name", "email", "address", "phone"],
          "properties": {
            "name": { "type": "string" },
            "email": {
              "type": ["string", "null"],
              "format": "email",
              "minLength": 6,
              "maxLength": 127
            },
            "address": {
              "oneOf": [{ "type": "null" }, { "$ref": "#/$defs/address" }]
            },
            "phone": { "type": ["string", "null"] }
          }
        },
        "location": {
          "oneOf": [{ "type": "null" }, { "$ref": "#/$defs/place" }]
        }
      }
    },
    "itemization": {
      "type": "object",
      "required": [
        "general",
        "lodging",
        "ecommerce",
        "car_rental",
        "transit_route",
        "subscription",
        "flight"
      ],
      "oneOf": [
        {
          "properties": {
            "general": {
              "type": "object",
              "minItems": 1
            }
          }
        },
        {
          "properties": {
            "lodging": {
              "type": "object"
            }
          }
        },
        {
          "properties": {
            "ecommerce": {
              "type": "object"
            }
          }
        },
        {
          "properties": {
            "car_rental": {
              "type": "object"
            }
          }
        },
        {
          "properties": {
            "transit_route": {
              "type": "object"
            }
          }
        },
        {
          "properties": {
            "subscription": {
              "type": "object",
              "required": ["subscription_items", "invoice_level_discounts"],
              "properties": {
                "subscription_items": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "required": [
                      "type",
                      "description",
                      "interval",
                      "interval_count",
                      "current_period_start",
                      "current_period_end",
                      "quantity",
                      "unit_cost",
                      "taxes",
                      "metadata",
                      "discounts"
                    ],
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": ["one_time", "recurring"]
                      },
                      "description": {
                        "type": "string"
                      },
                      "interval": {
                        "oneOf": [
                          { "type": "null" },
                          {
                            "type": "string",
                            "enum": ["day", "week", "month", "year"]
                          }
                        ]
                      },
                      "interval_count": {
                        "type": ["integer", "null"]
                      },
                      "current_period_start": {
                        "type": ["integer", "null"]
                      },
                      "current_period_end": {
                        "type": ["integer", "null"]
                      },
                      "quantity": {
                        "type": ["number", "null"]
                      },
                      "unit_cost": {
                        "type": ["number", "null"]
                      },
                      "taxes": {
                        "oneOf": [
                          { "type": "null" },
                          {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                              "$ref": "#/$defs/tax"
                            }
                          }
                        ]
                      },
                      "metadata": {
                        "oneOf": [
                          { "type": "null" },
                          {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                              "$ref": "#/$defs/item_metadata"
                            }
                          }
                        ]
                      },
                      "discounts": {
                        "oneOf": [
                          { "type": "null" },
                          {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                              "$ref": "#/$defs/discount"
                            }
                          }
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        },
        {
          "properties": {
            "flight": {
              "type": "object"
            }
          }
        }
      ]
    },
    "actions": {
      "oneOf": [
        { "type": "null" },
        {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "url"],
            "properties": {
              "name": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        }
      ]
    },
    "payment": {
      "oneOf": [
        { "type": "null" },
        {
          "type": "object",
          "required": ["paid_at", "type", "card_payment", "ach_payment"],
          "properties": {
            "paid_at": {
              "type": "integer"
            },
            "type": {
              "type": "string",
              "enum": ["card", "ach"]
            }
          },
          "allOf": [
            {
              "if": {
                "properties": {
                  "type": {
                    "const": "card"
                  }
                }
              },
              "then": {
                "properties": {
                  "card_payment": {
                    "type": "object",
                    "required": ["last_four", "network"],
                    "properties": {
                      "last_four": {
                        "type": "string"
                      },
                      "network": {
                        "type": "string",
                        "enum": [
                          "amex",
                          "diners",
                          "discover",
                          "eftpos_au",
                          "jcb",
                          "mastercard",
                          "unionpay",
                          "visa"
                        ]
                      }
                    }
                  },
                  "ach_payment": {
                    "type": "null"
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "type": {
                    "const": "ach"
                  }
                }
              },
              "then": {
                "properties": {
                  "card_payment": {
                    "type": "null"
                  },
                  "ach_payment": {
                    "type": "object",
                    "required": ["routing_number"],
                    "properties": {
                      "routing_number": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          ]
        }
      ]
    }
  },
  "$defs": {
    "merchant": {
      "type": "object",
      "required": ["id", "name", "brand_color", "logo", "website"],
      "properties": {
        "name": { "type": "string" },
        "brand_color": {
          "description": "Hex color",
          "type": "string",
          "pattern": "^#?([a-f0-9]{6}|[a-f0-9]{3})$"
        },
        "logo": {
          "type": ["string", "null"],
          "format": "uri"
        },
        "website": {
          "type": ["string", "null"],
          "format": "hostname"
        }
      }
    },
    "address": {
      "type": "object",
      "required": [
        "street_address",
        "city",
        "region",
        "country",
        "postal_code",
        "lat",
        "lon"
      ],
      "properties": {
        "street_address": { "type": ["string", "null"] },
        "city": { "type": ["string", "null"] },
        "region": {
          "type": ["string", "null"],
          "minLength": 2,
          "maxLength": 2
        },
        "country": { "type": "string", "minLength": 2, "maxLength": 2 },
        "postal_code": { "type": ["string", "null"] },
        "lat": {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "lon": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        }
      }
    },
    "place": {
      "type": "object",
      "required": ["name", "address", "phone", "url", "google_place_id"],
      "properties": {
        "name": { "type": ["string", "null"] },
        "address": {
          "oneOf": [{ "type": "null" }, { "$ref": "#/$defs/address" }]
        },
        "phone": { "type": ["string", "null"] },
        "url": {
          "type": ["string", "null"],
          "format": "uri"
        },
        "google_place_id": { "type": ["string", "null"] }
      }
    },
    "item_metadata": {
      "type": "object",
      "required": ["name", "type", "value"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["sku", "unspsc", "asin", "other"]
        },
        "name": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    },
    "discount": {
      "type": "object",
      "required": ["amount", "name", "type", "rate"],
      "properties": {
        "amount": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["fixed", "percentage"]
        }
      },
      "if": {
        "properties": {
          "type": {
            "const": "fixed"
          }
        }
      },
      "then": {
        "properties": {
          "rate": {
            "type": "null"
          }
        }
      },
      "else": {
        "properties": {
          "rate": {
            "type": "number"
          }
        }
      }
    },
    "tax": {
      "type": "object",
      "required": ["amount", "rate", "name"],
      "properties": {
        "amount": {
          "type": "integer"
        },
        "rate": {
          "type": ["number", "null"]
        },
        "name": {
          "type": "string"
        }
      }
    }
  }
}
