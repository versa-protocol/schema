{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "composite_receipt",
  "title": "CompositeReceipt",
  "description": "A receipt composite with both the receipt and merchant information",
  "type": "object",
  "required": [
    "receipt",
    "merchant"
  ],
  "properties": {
    "receipt": {
      "$ref": "receipt"
    },
    "merchant": {
      "$ref": "merchant"
    }
  }
}