{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "data_objects/merchant",
    "title": "Merchant",
    "description": "A Versa merchant returned by the registry, associated with the sender client_id",
    "type": "object",
    "required": [
        "id",
        "name",
        "brand_color",
        "logo"
    ],
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "string"
        },
        "name": {
          "type": "string"
        },
        "brand_color": {
          "description": "Hex color",
          "type": "string",
          "pattern": "^#?([a-f0-9]{6}|[a-f0-9]{3})$"
        },
        "logo": {
          "type": [
            "string",
            "null"
          ],
          "format": "uri"
        },
        "website": {
          "type": [
            "string",
            "null"
          ],
          "format": "hostname"
        }
    }
}